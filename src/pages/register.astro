---
import Layout from "../layouts/Layout.astro";
import { RegisterForm } from "../components/Auth/RegisterForm";
---

<Layout title="Rejestracja - MtG Decks Builder">
  <main class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">Utwórz nowe konto</h2>
        <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
          Lub{" "}
          <a href="/login" class="font-medium text-primary hover:text-primary/80">
            zaloguj się do istniejącego konta
          </a>
        </p>
      </div>
      <RegisterForm client:load />
    </div>
  </main>
</Layout>
