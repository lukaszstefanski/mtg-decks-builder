---
import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "../components/Auth/ForgotPasswordForm";
---

<Layout title="Odzyskiwanie hasła - MtG Decks Builder">
  <main class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">Odzyskaj hasło</h2>
        <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
          Wprowadź swój adres email, a wyślemy Ci link do resetowania hasła
        </p>
      </div>
      <ForgotPasswordForm client:load />
    </div>
  </main>
</Layout>
